#!name=Bilibili Live Helper
#!desc=bilibili auto checkin
[Script]
getcookie = type=http-request,pattern=^https:\/\/(www|live)\.bilibili\.com\/?.?,script-path=https://raw.githubusercontent.com/chavyleung/scripts/master/bilibili/bilibili.cookie.js

bilibili = type=cron,cronexp=10 0 0 * * *,wake-system=1,timeout=60,script-path=https://raw.githubusercontent.com/chavyleung/scripts/master/bilibili/bilibili.js


[MITM]
hostname = %APPEND% *.bilibili.com